{
  "name": "@race-foundation/sdk-solana",
  "version": "0.2.6",
  "description": "The Solana support for Race SDK",
  "scripts": {
    "check": "tsc -p tsconfig.check.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "build": "run-p -l build:*",
    "build:esm": "tsc -p tsconfig.esm.json",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:typedefs": "tsc -p tsconfig.types.json",
    "format": "prettier \"src/**/*.ts\" -w",
    "lint": "eslint"
  },
  "files": [
    "lib/**/*"
  ],
  "main": "lib/cjs/index.js",
  "module": "lib/esm/index.js",
  "types": "lib/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./lib/types/index.d.ts",
      "import": "./lib/esm/index.js",
      "require": "./lib/cjs/index.js"
    }
  },
  "author": "Race Team",
  "license": "ISC",
  "devDependencies": {
    "@solana/wallet-standard": "^1.1.4",
    "@types/bn.js": "^5.1.1",
    "@types/chai": "^4.3.4",
    "@types/jest": "^29.5.0",
    "@types/node": "^22.9.0",
    "@types/node-fetch": "^2.6.3",
    "chai": "^4.3.7",
    "eslint": "^8.40.0",
    "jest": "^29.5.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.7",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.4"
  },
  "peerDependencies": {
    "@race-foundation/borsh": "*",
    "@race-foundation/sdk-core": "*",
    "@solana-program/address-lookup-table": "^0.7.0",
    "@solana-program/system": "^0.7.0",
    "@solana-program/token": "^0.5.1",
    "@solana/kit": "^2.1.0",
    "@wallet-standard/base": "^1.1.0"
  },
  "testDependencies": {
    "crypto": "1.0.1"
  }
}
